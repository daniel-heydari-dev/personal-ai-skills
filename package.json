{
  "name": "ai-skills",
  "version": "1.0.0",
  "description": "Universal AI skills installer. Install skills, agents, commands, rules, and prompts across 20+ AI assistants (Claude, Cursor, Windsurf, Copilot, Gemini, and more).",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "ai",
    "skills",
    "agents",
    "claude",
    "cursor",
    "windsurf",
    "copilot",
    "gemini",
    "antigravity",
    "codex",
    "amp",
    "cline",
    "roo",
    "goose",
    "opencode",
    "kiro",
    "trae",
    "augment",
    "droid",
    "kilo",
    "ai-skills",
    "cli",
    "best-practices",
    "developer-tools"
  ],
  "author": "daniel-heydari",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniel-heydari-dev/ai-skills"
  },
  "homepage": "https://github.com/daniel-heydari-dev/ai-skills#readme",
  "bugs": {
    "url": "https://github.com/daniel-heydari-dev/ai-skills/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "ai-skills": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "web/dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:web": "cd web && pnpm run build",
    "build:all": "pnpm run build && pnpm run build:web",
    "build:catalog": "tsx scripts/build-catalog.ts",
    "dev": "tsx src/cli.ts",
    "dev:web": "cd web && pnpm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run test && pnpm run build:all"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
